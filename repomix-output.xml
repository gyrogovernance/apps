    started_at: string;
  };
  epochs: {
    epoch1: Epoch;
    epoch2: Epoch;
  };
  analysts: {
    epoch1: { analyst1: EpochAnalystSlot; analyst2: EpochAnalystSlot };
    epoch2: { analyst1: EpochAnalystSlot; analyst2: EpochAnalystSlot };
  };
  createdAt: string;
  updatedAt: string;
}

export interface NotebookState {
  // Legacy support - current active session data
  challenge: {
    title: string;
